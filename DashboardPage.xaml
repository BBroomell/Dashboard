<Page x:Class="Dashboard.DashboardPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:sdk="http://schemas.microsoft.com/winfx/2006/xaml/presentation/sdk"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:Dashboard" xmlns:sdk1="http://schemas.microsoft.com/netfx/2009/xaml/presentation"
    mc:Ignorable="d" 
      d:DesignHeight="450" d:DesignWidth="800"
      Title="DashboardPage">

    <Canvas x:Name="createCanvas">

        <Grid Height="{Binding ActualHeight, ElementName=createCanvas}"  Width="{Binding ActualWidth, ElementName=createCanvas}">


            <sdk1:DataGrid x:Name="mydatagrid" HorizontalAlignment="Center" ColumnWidth="*" CanUserAddRows="False" Height="Auto" Margin="75,57,69,42" VerticalAlignment="Top" Width="Auto"
            AutoGenerateColumns="True"/>

        </Grid>
    </Canvas>


</Page>
